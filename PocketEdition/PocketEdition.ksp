on ui_control (distanceSlider)
    DEBUG.add_log(distanceSlider)
    for $i := 0 to NUM_MENUS - 1
        ~DistanceOffset := int_to_real(distanceSlider)*(127.0 - int_to_real(%CC[100 + $i])) * 0.02
